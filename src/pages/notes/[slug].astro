---
import type { SanityDocument } from "@sanity/client";
import { loadQuery } from "../../lib/load-query";
import NoteLayout from "../layouts/NoteLayout.astro";

export async function getStaticPaths() {
  const { data: notes } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "notes"]`,
  });

  return notes.map(({ slug }) => {
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;

const { data: note } = await loadQuery({
  query: `*[_type == "notes" && slug.current == $slug][0]`,
  params,
});
---

<NoteLayout title={note.name} content={note.content} />
